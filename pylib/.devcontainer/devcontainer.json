{
	"name": "MZQC Python Development container",
	"dockerFile": "Dockerfile",
	"context": "..",
	"extensions": ["ms-python.python", "littlefoxteam.vscode-python-test-adapter"],
	"settings": {
		"python.pythonPath": "/usr/local/bin/python"
	},

	// make the local development via setup.py available in the container
	"postCreateCommand": "sudo pip install -e .",
	"runArgs": ["-u", "vscode"],

	// for the jupyter server
	"forwardPorts": [8888]
	// server needs to be started:
	// jupyter notebook --port=8888 --ip=0.0.0.0 and the token URL connected to with VScode
}
